# RESI Subnet Validator Configuration
# Copy to .env and fill in your values

# =============================================================================
# REQUIRED - Wallet Configuration
# =============================================================================
WALLET_NAME=validator
WALLET_HOTKEY=default
BITTENSOR_WALLET_PATH=~/.bittensor/wallets

# =============================================================================
# REQUIRED - Pylon Configuration
# =============================================================================
# Generate a secure token (e.g., openssl rand -base64 32)
PYLON_TOKEN=your_pylon_token_here
# Identity name must match PYLON_IDENTITIES in docker-compose.yml
PYLON_IDENTITY=validator
PYLON_URL=http://localhost:8000

# =============================================================================
# Network Configuration
# =============================================================================
# Network name (finney, test, local) or ws:// endpoint
SUBTENSOR_NETWORK=finney
NETUID=46

# =============================================================================
# Optional - Validation Settings
# =============================================================================
# EPOCH_LENGTH=360
# SCORE_THRESHOLD=0.005
# LOG_LEVEL=INFO
# DISABLE_SET_WEIGHTS=false

# =============================================================================
# Optional - Validation Data
# =============================================================================
# VALIDATION_DATA_URL=https://dashboard.resilabs.ai
# VALIDATION_DATA_SCHEDULE_HOUR=2
# VALIDATION_DATA_SCHEDULE_MINUTE=0

# =============================================================================
# Optional - Model Settings
# =============================================================================
# MODEL_CACHE_PATH=./model_cache
# MODEL_MAX_SIZE_MB=200
# MODEL_REQUIRED_LICENSE=MIT

# =============================================================================
# Optional - WandB (coming soon)
# =============================================================================
# WANDB_OFF=false
# WANDB_PROJECT=real-estate-subnet
# WANDB_ENTITY=your_entity
